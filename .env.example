# Database
DATABASE_URL=postgresql+asyncpg://user:password@host:5432/agentauth
# Get a free PostgreSQL at https://neon.tech
# Format: postgresql+asyncpg://user:pass@ep-xxx.region.aws.neon.tech/dbname

# Security
SECRET_KEY=your-super-secret-key-change-in-production
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"

# Token Settings
TOKEN_EXPIRY_SECONDS=3600
AUTH_CODE_EXPIRY_SECONDS=300

# Application
DEBUG=false
ENVIRONMENT=development

# Stripe (Test Mode)
# Get your test keys from https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
# Create products/prices in Stripe Dashboard and add their IDs here
STRIPE_PRICE_PRO=price_...
STRIPE_PRICE_ENTERPRISE=price_...
